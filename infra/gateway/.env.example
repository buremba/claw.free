# claw.free gateway â€” environment variables
#
# Copy to .env and edit before running docker compose up.

# --- Overlay network ---
# Headscale control server URL
HEADSCALE_URL=https://hs.example.com
# Pre-auth key for the "gateway" user (generate via: headscale preauthkeys create --user gateway)
TAILSCALE_AUTHKEY=

# --- TLS / Certificates ---
# Wildcard domain for bot webhooks (e.g. *.bots.example.com)
BOT_DOMAIN=bots.example.com
# ACME email for Let's Encrypt
ACME_EMAIL=admin@example.com
# DNS provider for lego wildcard cert (see https://go-acme.github.io/lego/dns/)
LEGO_DNS_PROVIDER=cloudflare
# Provider-specific credentials (example: Cloudflare)
CLOUDFLARE_DNS_API_TOKEN=

# --- Outbound proxy ---
# Allowlist API endpoint (Railway API). Empty = open mode (allow all outbound).
ALLOWLIST_API_URL=
# Internal API key for allowlist queries
INTERNAL_API_KEY=

# --- General ---
LOG_LEVEL=info
