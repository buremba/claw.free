# Headscale overlay network — environment variables
#
# Copy to .env and edit before running docker compose up.

# Public URL that Tailscale clients will connect to.
# Must be HTTPS in production (DERP requires TLS).
# Railway: use your Railway-provided domain (e.g. https://headscale-production-xxxx.up.railway.app)
HEADSCALE_SERVER_URL=https://hs.example.com

# Listen port. Railway sets PORT automatically — do not set on Railway.
PORT=8080

# MagicDNS base domain. Nodes are reachable as hostname.<base_domain>.
HEADSCALE_BASE_DOMAIN=claw.internal

# Only allow authenticated Headscale clients to use the DERP relay.
DERP_VERIFY_CLIENTS=true

# Log level: info, debug, trace
LOG_LEVEL=info
